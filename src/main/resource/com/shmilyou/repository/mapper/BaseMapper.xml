    <!-- queryById -->
    <select id="queryById" resultType="com.shmilyou.entity.User">
        SELECT * FROM ${tableName}
        WHERE id=#{id} AND del=0
    </select>

    <!-- queryByColumn -->
    <select id="queryByColumn" resultType="java.util.Map">
        SELECT * FROM ${tableName}
        WHERE ${column}=#{value} AND del=0
    </select>

    <!-- queryByColumns -->
    <select id="queryByColumns" resultType="com.shmilyou.entity.User">
        SELECT * FROM ${tableName}
        WHERE ${columnsToValues} del=0
    </select>

    <!-- queryByColumns2 -->
    <select id="queryByColumns2" resultType="com.shmilyou.entity.IEntity" statementType="STATEMENT">
        SELECT * FROM ${tableName}
        WHERE ${columnsToValues} del=0
